<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginFragment"
    android:background="@color/background"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_size"
        android:layout_gravity="center"
        android:textColor="@color/white_greyish"
        android:text="@string/log_in_with_mobile"
        android:textSize="20sp"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/et_mobile"
        android:hint="@string/mobile"
        style="@style/LogSignEdtTheme"
        android:drawableLeft="@drawable/phone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white_greyish" />


    <EditText
        android:id="@+id/et_password"
        android:hint="@string/password"
        style="@style/LogSignEdtTheme"
        android:drawableLeft="@drawable/password"
        android:inputType="textPassword"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white_greyish"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_size"
        android:layout_marginEnd="@dimen/padding_size"
        android:layout_marginStart="@dimen/padding_size"
        android:layout_marginTop="@dimen/small_size"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbx_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:outlineAmbientShadowColor="?attr/colorBackgroundFloating"
            android:outlineSpotShadowColor="@color/white"
            android:shadowColor="@android:color/background_light"
            android:text="@string/remember_me"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white" />
        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="5dp"
            android:text="@string/forget_password"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>



    <Button
        android:id="@+id/btn_sign_in"
        style="@style/LogSignBtnTheme"
        android:layout_marginTop="@dimen/x_large_size"
        android:text="@string/sign_in"
        android:textColor="@color/background"
        android:background="@drawable/loginbutton_selector"/>

    <TextView
        android:id="@+id/tv_go_to_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="@string/newUser"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        />


    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>



</LinearLayout>