<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LogSignEdtTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/normal_size</item>
        <item name="android:padding">@dimen/normal_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginLeft">@dimen/padding_size</item>
        <item name="android:layout_marginRight">@dimen/padding_size</item>

        <item name="android:drawablePadding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLength">20</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="LogSignBtnTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/normal_size</item>
        <item name="android:layout_marginLeft">@dimen/padding_size</item>
        <item name="android:layout_marginRight">@dimen/padding_size</item>
    </style>

    <style name="LoginAlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="windowMinWidthMinor">90%</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/colorPrimary</item>

    </style>


</resources>
